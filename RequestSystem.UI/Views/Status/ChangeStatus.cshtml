@model StatusModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var statementId = ViewContext.RouteData.Values["id"];
}

@using (Html.BeginForm())
{
    <input type="hidden" value="@statementId" name="StatementId" />
    <div class="form-row">
        <div class="form-group col-6">
            <label for="Comment">Комментарий</label>
            @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
        </div>
        <div class="form-group col-3">
            <label for="StatusCode">Состояние</label>
            @Html.DropDownList(
                    "StatusCode",
                    new SelectList(ViewBag.StatusItems, "Value", "Text"),
                    new { @class = "form-control" })
        </div>
        <div class="form-group col-3" />
    </div>

    <button type="submit" class="btn btn-primary">Изменить статус</button>
    @Html.ActionLink("Отмена", "Edit", "Statement", new { id = statementId }, new { @class = "btn btn-danger" })
}

